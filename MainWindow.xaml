<Window x:Class="CotTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CotTools"
        mc:Ignorable="d"
        Title="COT Tools" Height="450" Width="800" WindowStyle="SingleBorderWindow">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF2F5F6A" Offset="0.069"/>
            <GradientStop Color="#FF8FB6BF" Offset="0.451"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Grid.ColumnSpan="2"
                   Margin="5,5,5,5">           
        <Hyperlink NavigateUri="https://www.cftc.gov/MarketReports/CommitmentsofTraders/HistoricalCompressed/index.htm" 
                   RequestNavigate="Hyperlink_RequestNavigate" Foreground="Black"
                   >
            https://www.cftc.gov/MarketReports/CommitmentsofTraders/HistoricalCompressed/index.htm
        </Hyperlink>    
        </TextBlock>
        <Label Content="Drop COT Excel Files Here:"
               Grid.Row="2"
               Grid.ColumnSpan="2"
               x:Name="lblFile" ></Label>

        <StackPanel x:Name="panFile"
            AllowDrop="True" 
                    Grid.Row="3"
                    Margin="5,5,5,5"
                    Drop="panFile_Drop" Background="Gainsboro"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="5,5,5,5">
            <ComboBox x:Name="cmbScenario"
                      Width="150"
                      Margin="0,0,20,0"
                      Height="22"
                      SelectedIndex="0"
                      VerticalAlignment="Center">
                <ComboBoxItem x:Name="itemForexNet" 
                              Content="FX Net">
                </ComboBoxItem>
                <ComboBoxItem x:Name="itemForexChangeNet" 
                              Content="FX Change Net">
                </ComboBoxItem>
            </ComboBox>

            <StackPanel Orientation="Horizontal"
                        x:Name="panDateColumn"
                            Margin="10,0,0,0">
                <Label VerticalAlignment="Center">
                    Date Column Index:</Label>
                <TextBox Text="0" 
                     VerticalAlignment="Center"
                     TextAlignment="Center"
                     Width="30"
                     x:Name="txtDateColumnIndex"
                     Background="Gainsboro"
                     Height="20">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        x:Name="panControlsNet"
                        Margin="10,0,0,0">
                <Label VerticalAlignment="Center">
                    Column 1 Index:</Label>
                <TextBox Text="3" 
                     VerticalAlignment="Center"
                     TextAlignment="Center"
                     Width="30"
                     x:Name="txtColumnIndex"
                     Background="Gainsboro"
                     Height="20">
                </TextBox>
                <StackPanel Orientation="Horizontal"
                        x:Name="panControlsChangeNet"
                            Margin="10,0,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger 
                                Binding="{Binding SelectedItem.Content, ElementName = cmbScenario}"
                                Value="FX Net">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Label VerticalAlignment="Center">
                        Column 2 Index:</Label>
                    <TextBox Text="2" 
                     VerticalAlignment="Center"
                     TextAlignment="Center"
                     Width="30"
                     x:Name="txtColumnIndex1"
                     Background="Gainsboro"
                     Height="20">
                    </TextBox>
                </StackPanel>
            </StackPanel>


        </StackPanel>
        <TextBox x:Name="txtResult"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="5,5,5,5"
                 VerticalScrollBarVisibility="Auto"
                 Background="Gainsboro">
        </TextBox>
    </Grid>
</Window>
